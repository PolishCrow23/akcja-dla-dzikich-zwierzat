---
import type { CollectionEntry } from 'astro:content';
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/slotwrapper.css"

const { title } = Astro.props;

---

<html lang="en">
	<head>
        <BaseHead />
    </head>
    <body>
        <Header />
        <main>
            <div class = "post">
                <div class = "title">
                    <h1>{title}</h1>
                    <hr>
                </div>
                <div class="slot-wrapper">
                    <slot />
                </div>
            </div>
        </main>
        <Footer />
    </body>

<style>
    main {
        margin-inline: 4%;
    }
    .post {
        max-width: 720px;
        margin: 0 auto;
        margin-bottom: 8em;
    }
    .title {
        margin: 6em 0 5em;
    }
    .post h1 {
        text-align: center;
        font-size: 3.6rem;
        margin-bottom: 0.6em;
    }
    .post hr {
        width: 100%;
        margin: 0 auto 4em;
    }
    
</style>
