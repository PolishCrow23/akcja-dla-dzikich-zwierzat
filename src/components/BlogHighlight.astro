<style>
    svg {
    vertical-align: middle;
    }

    a:hover {
        color: var(--cel);
    }

    section { 
        background-color: #fafafa;
        padding: 6em;
    }
    ul {
        padding-block: 4em;
    }
    h2 {
        font-size: 4rem;
    }
    h3 {
        font-size: 2rem;
    }
    .heroImg {
        margin-inline: auto;
    }
    img {
        margin: 0 auto;
    }
    .wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 3em;
    }
    hr {
        border-top: 7px solid #14aaa1;
        width: 50px;
    }
    .description {
        font-size: 1.4rem;
        color: var(--gray);
    }
    .post-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;

        width: 344px;
        min-height: 431px;
        border-radius: 16px;
        padding: 1em;

        margin: 0 auto;
        background-color: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .title h2 {
        font-size: 2.2rem;
    }

    .title {
        color: var(--black);
    }

    .title-date {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1em;
    }

    .more-info {
        margin-left: auto;
        color: var(--celadon);
    }
    
    img {
        width: 312px;
        height: 232px;
        border-radius: 8px;
        object-fit: cover;
    }

    .post-card:hover {
        transform-origin: top;
        transition-duration: 0.5s;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    }
    .post-card {
        transition-duration: 0.5s;
    }
</style>