---
const allPosts = await Astro.glob('../pages/blog/*.md');
---

<section>
    <h2>Blog</h2>
    <hr>

    <div class="wrapper">
        {allPosts
        .map((post) => 
            <a href={post.url}>
                <div class="post-card">
                    <img src={post.frontmatter.heroImage}/>
                    <div class="title-date">
                        <h2 class="title">{post.frontmatter.title}</h2>
                        <span>{post.frontmatter.date}</span>
                    </div>
                    <p>{post.frontmatter.description}</p>
                </div>
            </a>).slice(0,3)}
    </div>
</section>

<style>
    
    section { 
        background-color: #fafafa;
        padding: 6em;
    }
    ul {
        padding-block: 4em;
    }
    h2 {
        font-size: 4rem;
    }
    h3 {
        font-size: 2rem;
    }
    img {
        width: 300px;
    }
    .wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 3em;
    }
    hr {
        border-top: 7px solid #14aaa1;
        width: 65px;
    }
    .post-card {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;

        width: 344px;
        height: 431px;
        border-radius: 16px;
        padding: 1em;

        margin: 0 auto;
        background-color: rgb(221, 221, 221);
    }

    .title {
        font-size: 2.2rem;
    }

    .title-date {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1em;
    }
    
    img {
        width: 312px;
        height: 232px;
        border-radius: 8px;
        object-fit: cover;
    }

    .post-card:hover {
        transform: scale(1.03);
        transform-origin: top;
        transition-duration: 0.5s;
    }
    .post-card {
        transition-duration: 0.5s;
    }
</style>